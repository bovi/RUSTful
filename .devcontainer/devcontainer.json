{
  "name": "Rust development environment",
  "build": {
    "dockerfile": "Dockerfile",
    "args": { "INSTALL_RUST": "true" }
  },
  "runArgs": [ "-v", "/var/run/docker.sock:/var/run/docker.sock" ],
  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.copilot-nightly",
        "GitHub.copilot-labs",
        "rust-lang.rust-analyzer"
      ],
    }
  }
}