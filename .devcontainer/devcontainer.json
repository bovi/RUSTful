{
  "name": "Rust development environment",
  "build": {
    "dockerfile": "Dockerfile",
    "args": { "INSTALL_RUST": "true" }
  },
  "runArgs": [ "-v", "/var/run/docker.sock:/var/run/docker.sock" ],
  "extensions": [
    "vscoss.vscode-ansible",
    "ms-vscode.cpptools",
    "rust-lang.rust",
    "matklad.rust-analyzer",
  ]
}